{
  "family": "ecsftest-container-auto-restart-on-failure",
  "containerDefinitions": [
    {
      "name": "essential",
      "image": "127.0.0.1:51670/busybox:latest",
      "cpu": 0,
      "memory": 64,
      "essential": true,
      "workingDirectory" : "/test",
      "command": ["sh", "-c", "cat test.txt", "sleep 60"]
    },
    {
      "name": "non-essential-on-failure",
      "image": "127.0.0.1:51670/busybox:latest",
      "cpu": 0,
      "memory": 64,
      "essential": false,
      "restartPolicy": "ON_FAILURE",
      "restartMaxAttempts": 2,
      "command": ["sh", "-c", "echo hi && exit 1"],
      "mountPoints" : [
        {
          "sourceVolume": "volume1",
          "containerPath": "/test"
        }
      ],
      "workingDirectory" : "/test"
    }
  ],
  "volumes" : [
    {
      "name" : "volume1"
    }
  ]
}
